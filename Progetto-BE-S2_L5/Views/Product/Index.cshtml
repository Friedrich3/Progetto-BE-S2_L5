@using Progetto_BE_S2_L5.Models.ViewModels
@model ListaProdottiViewModel

@{
    ViewData["Title"] = "Catalogo";
}



<div class="container">
	<div class="py-4 border-bottom border-secondary d-flex justify-content-between">
		<h1>Catalogo Prodotti:</h1>
        <a asp-controller ="Home" asp-action="Index" class="fw-bold align-content-center py-0 text-decoration-none">⬅️ Go Home</a>
	</div>
	<div class="row my-4">

        @foreach (var item in Model.ListaArticoli)
        {

            <div id="product-indice" class="col-6 col-md-4 col-lg-3">
            <div class="card border-0" >
                    <img src="@item.Immagini![0]" class="card-img-top img-fluid" alt="Foto Copertina">
                    <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
						<p class="card-text fw-bold fs-3">$@item.Price</p>
                    <p class="card-text">@item.Description</p>
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info ">Dettagli Prodotto</a>
                </div>
            </div>
        </div>

        }




	</div>
</div>